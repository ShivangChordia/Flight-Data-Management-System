@page "/search-telemetry"
@using Ground_Terminal_Management_System.Model
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext DbContext
@rendermode InteractiveServer

<h3>Search Telemetry Data</h3>

<div>
    <label for="tailNumber">Airplane Tail Number:</label>
    <input type="text" id="tailNumber" @bind="tailNumber" class="form-control" />

</div>
<button class="btn btn-primary mt-2" @onclick="OnButtonClick">Test Button</button>
<button class="btn btn-primary mt-2" @onclick=SearchTelemetryData>Search</button>

@if (telemetryDataList != null && telemetryDataList.Any())
{
    <h4>Results:</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Tail Number</th>
                <th>Sequence Number</th>
                <th>Timestamp</th>
                <th>Altitude</th>
                <th>Pitch</th>
                <th>Bank</th
            </tr>
        </thead>
        <tbody>
            @foreach (var data in telemetryDataList)
            {
                <tr>
                    <td>@data.TailNumber</td>
                    <td>@data.SequenceNumber</td>
                    <td>@data.Timestamp</td>
                    <td>@data.Altitude</td>
                    <td>@data.Pitch</td>
                    <td>@data.Bank</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No results found.</p>
}

@code {
    private string tailNumber = string.Empty;
    private List<TelemetryDataModel> telemetryDataList;
    private void SearchTelemetryData()
    {


        Console.WriteLine("Search button clicked!");

        IQueryable<TelemetryDataModel> query = DbContext.TelemetryDatas.AsQueryable();

        if (!string.IsNullOrEmpty(tailNumber))
        {
            query = query.Where(t => t.TailNumber.Contains(tailNumber));
        }

        telemetryDataList = query.ToList();

        Console.WriteLine($"Found {telemetryDataList.Count} results.");

        // Explicitly trigger UI update
        StateHasChanged();
    }

      private void OnButtonClick()
    {
        Console.WriteLine("Button clicked!");
    }
}
