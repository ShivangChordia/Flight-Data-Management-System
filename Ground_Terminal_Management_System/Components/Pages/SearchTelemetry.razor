@using Ground_Terminal_Management_System.Data
@using Microsoft.EntityFrameworkCore
@page "/search-telemetry"
@inject FdmsDbContext DbContext

<h3>Search Telemetry</h3>
<input @bind="searchQuery" placeholder="Enter Tail Number..." />
<button @onclick="TelemetrySearch">Search</button>

<table class="table">
    <thead>
        <tr>
            <th>Timestamp</th>
            <th>AccelX</th>
            <th>AccelY</th>
            <th>AccelZ</th>
            <th>Altitude</th>
            <th>Pitch</th>
            <th>Bank</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var telemetry in searchResults)
        {
            <tr>
                <td>@telemetry.Timestamp</td>
                <td>@telemetry.AccelX</td>
                <td>@telemetry.AccelY</td>
                <td>@telemetry.AccelZ</td>
                <td>@telemetry.Altitude</td>
                <td>@telemetry.Pitch</td>
                <td>@telemetry.Bank</td>
            </tr>
        }
    </tbody>
</table>

@code {
    private string searchQuery = string.Empty;
    private List<FdmsDbContext.TelemetryData> searchResults = new();

    private async Task TelemetrySearch()
    {
        searchResults = await DbContext.TelemetryRecords
            .Where(t => t.AircraftTailNumber.Contains(searchQuery))
            .ToListAsync();
    }
}